(* usefull stuff *)
(* rectangle integration *)
let node integr (dt, x') = x where
  rec x = 0.0 -> dt *. x' +. (pre x)

(* derivative *)
let node deriv (dt, x) = x' where
  rec x' = 0.0 -> (x -.(pre x)) /. dt

let node deriv2 (dt, x) = x' where
  rec x' = 0.0 -> pre (0.0 -> pre (0.0 -> pre (x -. 0.0 -> (pre x)) /. dt))

